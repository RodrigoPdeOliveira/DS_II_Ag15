<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventosApp.Views.CadastroEventoPage"
             Title="CadastroEventoPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Cadastro de Evento"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Frame BackgroundColor="{StaticResource Background}"
                   BorderColor="{StaticResource Accent}"
                   Padding="20"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Nome do Evento:" FontSize="16" FontAttributes="Bold"/>
                    <Entry Placeholder="Digite o nome do evento"
                        Text="{Binding Nome}"
                        FontSize="16"/>

                    <Label Text="Data de Início:" FontSize="16" FontAttributes="Bold"/>
                    <DatePicker Date="{Binding DataInicio}"
                                Format="dd/MM/yyyy"
                                FontSize="16"/>

                    <Label Text="Data de Término:" FontSize="16" FontAttributes="Bold"/>
                    <DatePicker Date="{Binding DataTermino}"
                                Format="dd/MM/yyyy"
                                FontSize="16"/>

                    <Label Text="Número de Participantes:" FontSize="16" FontAttributes="Bold"/>
                    <Entry Placeholder="Digite o número de participantes"
                        Text="{Binding NumeroParticipantes}"
                        Keyboard="Numeric"
                        FontSize="16"/>

                    <Label Text="Local do Evento:" FontSize="16" FontAttributes="Bold"/>
                    <Entry Placeholder="Digite o local do evento"
                        Text="{Binding Local}"
                        FontSize="16"/>

                    <Label Text="Custo por Participante (R$):" FontSize="16" FontAttributes="Bold"/>
                    <Entry Placeholder="Digite o custo por participante"
                        Text="{Binding CustoPorParticipante}"
                        Keyboard="Numeric"
                        FontSize="16"/>

                    <Button Text="Cadastrar Evento"
                            Clicked="OnCadastrarClicked"
                            BackgroundColor="{StaticResource Accent}"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            Margin="0,20,0,0"
                            HeightRequest="50"/>

                </VerticalStackLayout>            
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
